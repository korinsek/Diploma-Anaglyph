<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diplomskanalogastereoscope"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.diplomskanalogastereoscope.CameraTwoPhones"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.diplomskanalogastereoscope.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/izberiNapravo"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name="com.example.diplomskanalogastereoscope.ImageComposition"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.diplomskanalogastereoscope.CameraOnePhone"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.diplomskanalogastereoscope.StartActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
</manifest>